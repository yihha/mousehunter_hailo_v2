# MouseHunter Environment Variables
# Copy this file to .env and fill in your values

# Telegram Configuration
MOUSEHUNTER_TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
MOUSEHUNTER_TELEGRAM_CHAT_ID=your_chat_or_group_id

# Optional overrides (uncomment to use)
# MOUSEHUNTER_JAMMER_GPIO_PIN=17
# MOUSEHUNTER_INFERENCE_CONFIDENCE_THRESHOLD=0.6
# MOUSEHUNTER_LOGGING_LEVEL=INFO

# Cloud Storage (optional - configure rclone first with 'rclone config')
# MOUSEHUNTER_CLOUD_ENABLED=true
# MOUSEHUNTER_CLOUD_RCLONE_REMOTE=gdrive
# MOUSEHUNTER_CLOUD_REMOTE_PATH=MouseHunter
# MOUSEHUNTER_CLOUD_UPLOAD_AFTER_DETECTION=true
# MOUSEHUNTER_CLOUD_DELETE_LOCAL_AFTER_UPLOAD=false
# MOUSEHUNTER_CLOUD_BANDWIDTH_LIMIT=1M
